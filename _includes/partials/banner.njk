{% if widget.banner.show_banner %}<section class="container mt-3 mb-3">
       <a href="{{widget.banner.url}}" title="{{widget.banner.alt}}" 
       target="_blank"  rel="noreferrer">
       <img class="img-fluid shadow-sm rounded lazy-load-image" 
       width="100%" 
       height="100%" 
       loading="lazy"
       alt="{{metadata.title}}" 
       src="{{widget.banner.image}}"
       data-src="{{widget.banner.image}}"
       /></a>
</section>{% endif %}
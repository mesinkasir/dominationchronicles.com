---
layout: base.njk
---
    <section class="py-5 mt-5">
        <div class="container pt-5">
            
            <header class="text-center mb-5">
                <h1 class="display-4 fw-bold"><a href="{{page.url}}">{{title}}</a></h1> 
                <p class="lead text-secondary">{{description}}</p>
            </header>
            <div class="row">
                <div class="col-md-10 mx-auto">{% if image %}<img class="img-fluid rounded" alt="{{title}}" width="100%" height="100%" src="{{image}}"/>{% endif %}</div>
                <div class="col-md-8 mx-auto p-3">
                {{content|safe}}
            </div>
            </div>
        </div>
    </section>